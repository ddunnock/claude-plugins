{
  "description": "Requirements-dev hooks: auto-update state.json when requirements-dev artifacts are written",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/update-state-on-write.sh \"$TOOL_INPUT_PATH\"",
            "timeout_ms": 5000
          }
        ]
      }
    ]
  }
}
